* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #f5f7fa;
    min-height: 100vh;
    padding: 20px;
    line-height: 1.6;
}

.app-container {
    max-width: 1200px;
    margin: 0 auto;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    overflow: hidden;
}

.app-header {
    background: white;
    color: #333;
    padding: 25px 30px;
    text-align: center;
    position: relative;
    border-bottom: 1px solid #e1e8ed;
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.header-content i {
    font-size: 24px;
    color: #667eea;
}

.header-content h1 {
    font-size: 24px;
    font-weight: 600;
    flex-grow: 1;
    margin: 0 20px;
    color: #333;
}

.online-status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    background: #f8f9fa;
    padding: 6px 12px;
    border-radius: 8px;
    color: #666;
}

.status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #2ed573;
}


.main-content {
    padding: 30px;
}

/* Form Styles */
.form-section {
    margin-bottom: 30px;
}

.form-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    overflow: hidden;
    border: 1px solid #e1e8ed;
}

.form-header {
    background: white;
    padding: 30px;
    text-align: center;
    color: #333;
    border-bottom: 1px solid #e1e8ed;
}

.form-header i {
    font-size: 32px;
    color: #667eea;
    margin-bottom: 12px;
}

.form-header h2 {
    font-size: 22px;
    font-weight: 600;
    margin-bottom: 8px;
    color: #333;
}

.form-header p {
    color: #666;
    font-size: 14px;
}

.permit-form {
    padding: 30px;
}

.form-group {
    margin-bottom: 25px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

.form-group label {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
    font-size: 14px;
}

.form-group label i {
    color: #667eea;
    width: 16px;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 15px 20px;
    border: 2px solid #e1e8ed;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #fafafa;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.form-group input[readonly] {
    background: #f8f9fa;
    color: #495057;
    cursor: default;
}

.auto-detect-badge {
    background: #e8f4f8;
    color: #667eea;
    font-size: 11px;
    padding: 3px 8px;
    border-radius: 6px;
    margin-left: 8px;
    font-weight: 500;
}

.auto-detect-info {
    background: #f0f4ff;
    border: 1px solid #e0e7ff;
    border-radius: 8px;
    padding: 12px;
    margin-top: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
    color: #667eea;
    font-size: 13px;
}

.auto-detect-info i {
    font-size: 14px;
    color: #667eea;
}

.form-group textarea {
    resize: vertical;
    min-height: 100px;
}

.form-actions {
    display: flex;
    gap: 15px;
    margin-top: 30px;
}

/* Button Styles */
.btn-primary,
.btn-secondary,
.btn-success,
.btn-ghost {
    padding: 15px 25px;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
}

.btn-primary {
    background: #667eea;
    color: white;
    flex: 1;
}

.btn-primary:hover {
    background: #5568d3;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.btn-secondary {
    background: #f8f9fa;
    color: #333;
    border: 2px solid #e1e8ed;
}

.btn-secondary:hover {
    background: #e9ecef;
    border-color: #cbd5e0;
}

.btn-success {
    background: #2ed573;
    color: white;
}

.btn-success:hover {
    background: #26bd65;
    box-shadow: 0 4px 12px rgba(46, 213, 115, 0.3);
}

.btn-ghost {
    background: transparent;
    color: #666;
    padding: 10px 15px;
}

.btn-ghost:hover {
    background: #f8f9fa;
}

/* Letter Styles */
.letter-section {
    margin-top: 30px;
}

.letter-actions {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
    justify-content: center;
}

.letter-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    padding: 40px;
    margin: 0 auto;
    max-width: 800px;
    position: relative;
    border: 1px solid #e1e8ed;
}

.letter-content {
    font-family: 'Times New Roman', serif;
    line-height: 1.8;
    color: #333;
}

.letter-header {
    text-align: center;
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 2px solid #e1e8ed;
}

.letter-title {
    font-size: 22px;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.letter-subtitle {
    font-size: 16px;
    color: #666;
    font-style: italic;
}

.letter-body {
    margin-bottom: 40px;
}

.letter-body p {
    margin-bottom: 15px;
    text-align: justify;
}

.letter-details {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    margin: 20px 0;
    border-left: 3px solid #667eea;
}

.detail-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    padding: 5px 0;
}

.detail-label {
    font-weight: 600;
    color: #333;
    min-width: 150px;
}

.detail-value {
    color: #666;
    flex: 1;
    text-align: right;
}

.letter-footer {
    display: flex;
    justify-content: space-between;
    margin-top: 50px;
}

.signature-section {
    text-align: center;
    min-width: 200px;
}

.signature-section p {
    margin-bottom: 60px;
}

.signature-line {
    border-bottom: 1px solid #333;
    margin-bottom: 5px;
}

.signature-name {
    font-weight: bold;
}

/* History Styles */
.history-section {
    margin-top: 30px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    overflow: hidden;
    border: 1px solid #e1e8ed;
}

.history-header {
    background: #f8f9fa;
    padding: 18px 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    border-bottom: 1px solid #e1e8ed;
}

.history-header h3 {
    color: #333;
    font-size: 18px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.history-list {
    max-height: 400px;
    overflow-y: auto;
}

.history-item {
    padding: 20px 25px;
    border-bottom: 1px solid #e1e8ed;
    cursor: pointer;
    transition: all 0.3s ease;
}

.history-item:hover {
    background: #f8f9fa;
}

.history-item:last-child {
    border-bottom: none;
}

.history-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.history-date {
    font-size: 14px;
    color: #666;
}

.history-status {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
}

.status-approved {
    background: #d4edda;
    color: #155724;
}

.status-pending {
    background: #fff3cd;
    color: #856404;
}

.history-preview {
    font-size: 14px;
    color: #666;
    line-height: 1.4;
}

/* Notification */
.notification {
    position: fixed;
    top: 20px;
    right: 20px;
    background: #2ed573;
    color: white;
    padding: 15px 25px;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    transform: translateX(400px);
    transition: transform 0.3s ease;
    z-index: 1000;
    max-width: 350px;
}

.notification.show {
    transform: translateX(0);
}

.notification.error {
    background: #ff4757;
}

.notification.warning {
    background: #ffa502;
}

/* Print Styles */
@media print {
    body {
        background: white;
        padding: 0;
    }
    
    .app-container {
        box-shadow: none;
        border-radius: 0;
    }
    
    .app-header,
    .letter-actions,
    .history-section,
    .form-section {
        display: none !important;
    }
    
    .letter-container {
        box-shadow: none;
        padding: 20px;
        max-width: none;
    }
    
    .letter-content {
        font-size: 12pt;
        line-height: 1.6;
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    body {
        padding: 10px;
    }
    
    .main-content {
        padding: 20px;
    }
    
    .header-content {
        flex-direction: column;
        gap: 15px;
    }
    
    .header-content h1 {
        font-size: 24px;
        margin: 0;
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: 15px;
    }
    
    .form-actions {
        flex-direction: column;
    }
    
    .letter-actions {
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .letter-container {
        padding: 25px 20px;
    }
    
    .letter-footer {
        flex-direction: column;
        gap: 30px;
    }
    
    .detail-row {
        flex-direction: column;
        gap: 5px;
    }
    
    .detail-value {
        text-align: left;
    }
}

@media (max-width: 480px) {
    .header-content i {
        font-size: 24px;
    }
    
    .header-content h1 {
        font-size: 20px;
    }
    
    .form-header i {
        font-size: 36px;
    }
    
    .form-header h2 {
        font-size: 20px;
    }
    
    .permit-form {
        padding: 20px;
    }
    
    .letter-container {
        padding: 20px 15px;
    }
    
    .letter-title {
        font-size: 20px;
    }
}

/* Animation Classes */
.fade-in {
    animation: fadeIn 0.5s ease;
}

.slide-in {
    animation: slideIn 0.3s ease;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes slideIn {
    from { 
        opacity: 0;
        transform: translateY(20px);
    }
    to { 
        opacity: 1;
        transform: translateY(0);
    }
}

/* Scrollbar Styling */
.history-list::-webkit-scrollbar {
    width: 6px;
}

.history-list::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}

.history-list::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 10px;
}

.history-list::-webkit-scrollbar-thumb:hover {
    background: #a8a8a8;
}

/* Loading States */
.loading {
    opacity: 0.6;
    pointer-events: none;
}

.loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 20px;
    height: 20px;
    margin: -10px 0 0 -10px;
    border: 2px solid #ff6b6b;
    border-top: 2px solid transparent;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}